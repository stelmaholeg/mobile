<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
    <name>Универсальный модуль поиска Virtuemart</name>
    <author>Arkadiy,Morph</author>
    <creationDate>27.05.2010</creationDate>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail></authorEmail>
    <authorUrl></authorUrl>
    <version>1.2</version>
    <description>Универсальный модуль поиска для Virtuemart.Поиск по категории,производителю,параметрам типов товара.</description>
    <files>
        <filename module="mod_vm_universal_search_free">mod_vm_universal_search_free.php</filename>
        <filename module="mod_vm_universal_search">index.html</filename>
        <filename module="mod_vm_universal_search">files/index.html</filename>
        <filename module="mod_vm_universal_search">files/mod_universal_search.js</filename>
        <filename module="mod_vm_universal_search">files/style.css</filename>
    </files>
    <languages folder="languages">
        <language tag="ru-RU">ru-RU.mod_vm_universal_search_free.ini</language>
    </languages>
    <params>
        <param name="show_cat" type="list" default="1" label="ADM_CAT" description="ADM_CAT_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="show_manuf" type="list" default="1" label="ADM_MAN" description="ADM_MAN_DESC">
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="show_types" type="list" default="1" label="ADM_TYPE" description="ADM_TYPE_DESC" >
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="show_prices" type="list" default="1" label="ADM_PRICE_DESC" description="ADM_PRICE_DESC" >
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="moduleclass_sfx" type="text" default="" label="ADM_CSS_DESC" description="ADM_CSS_DESC" />
        <param name="jq" type="list" default="1" label="ADM_JQ" description="ADM_JQ_DESC" >
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
        <param name="jqf" type="list" default="1" label="ADM_JQF" description="ADM_JQF_DESC" >
            <option value="1">YES</option>
            <option value="0">NO</option>
        </param>
    </params>

</install>
